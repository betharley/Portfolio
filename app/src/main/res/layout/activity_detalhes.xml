<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".portfolio.DetalhesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/detalhes_imagem"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:srcCompat="@drawable/user"
        android:scaleType="fitCenter"
        android:backgroundTint="#00BCD4"
        />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/item_foto_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icone_dislike"
                />
            <TextView
                android:id="@+id/item_likes_quantidade"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0 Likes"
                android:layout_marginLeft="10dp"
                android:textColor="#403E3E"
                android:textSize="15sp"
                android:gravity="center_vertical"

                />

            <ImageView
                android:id="@+id/item_foto_comentar"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/icone_comentario"
                />
            <TextView
                android:id="@+id/item_quantidade"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0 Comentários"
                android:layout_marginLeft="10dp"
                android:textColor="#403E3E"
                android:textSize="15sp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_linha_contorno"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/detalhes_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Title da Postagem"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />
            <ImageView
                android:id="@+id/detalhes_alterar_titulo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icone_edit_black_24dp"
                android:layout_gravity="start"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_linha_contorno"
        >
    <TextView
        android:id="@+id/detalhes_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Descrição da postagem\nljkdfa\nldjfs\n"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:textSize="17sp"
        />
        <ImageView
            android:id="@+id/detalhes_alterar_descricao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icone_edit_black_24dp"
            android:layout_gravity="start"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    </LinearLayout>

</ScrollView>